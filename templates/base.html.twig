<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/css/materialize.min.css">
        <link rel="stylesheet" href="{{ asset('build/app.css') }}">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Roboto+Slab" rel="stylesheet">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/js/materialize.min.js"></script>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    </head>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>

    <div class=" navbar-fixed">
        <nav class="teal lighten-2 navbar-fixed">
            <div class="nav-wrapper">
                <a href="#!" class="brand-logo">Emilien Letestu</a>
                <a href="#" data-target="mobile-demo" class="sidenav-trigger" id="trigger"><i class="material-icons">menu</i></a>
                <ul class="right hide-on-med-and-down">
                    <li><a href="">A propos de moi</a></li>
                    <li><a href="">Compétences</a></li>
                    <li><a href="#project">Réalisations</a></li>
                    <li><a href="#contact">Contact</a></li>
                    <li><a href="{{ path('editProject') }}">Ajouter un projet</a></li>
                </ul>
            </div>
        </nav>

        <ul class="sidenav" id="mobile-demo">
            <li><a href="">A propos de moi</a></li>
            <li><a href="">Compétences</a></li>
            <li><a href="#project">Réalisations</a></li>
            <li><a href="#contact">Contact</a></li>
            <li><a href="{{ path('editProject') }}">Ajouter un projet</a></li>
        </ul>
    </div>


        {% for label, messages in app.flashes(['denied','error','success','warning','welcome']) %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}" id="backGenerated">
                    <p>{{ message }}</p>
                </div>
            {% endfor %}
        {% endfor %}

        {% block body %}{% endblock %}

        <footer class="page-footer teal lighten-2">
            <div class="container" style="text-align: center">
                <div class="row">
                    <div class="col l12 s12">
                        <h5 class="white-text">Suivez-moi</h5>
                        <ul class="social">
                            <li class="social-list"><a class="grey-text text-lighten-3" href="https://linkedin.com/in/emilien-letestu-a4641215b"><i class="fab fa-linkedin"></i></a></li>
                            <li class="social-list"><a class="grey-text text-lighten-3" href="https://github.com/EmilienLetestu"><i class="fab fa-github-square"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="footer-copyright teal">
                <div class="container">
                    © 2018 Emilien Letestu
                    <a class="grey-text text-lighten-4 right" href="#!">Mentions légales</a>
                </div>
            </div>
        </footer>

        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('build/app.js') }}"></script>
        {% endblock %}
    </body>
</html>

{% extends "base.html.twig" %}


    {% block body %}

        <div class="top-img" style="background-image: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), url('{{ asset('../uploads/home.jpg') }}')">

        </div>


        <div class="container main">
            <div class="row" id="project">
                {% for project in projectList %}
                    <div class="col s7 m4">
                        <div class="card">
                            <div class="card-image">
                                <img src="{{ asset('../uploads/projects/d2_pict.png') }}">
                                <a href="{{ project.link }}" class="btn-floating halfway-fab waves-effect waves-light  teal accent-3"><i class="material-icons">link</i></a>
                            </div>
                            <div class="card-content">
                                <p> {{ project.description }}</p>
                            </div>
                            <div class="card-reveal">
                                <span class="card-title grey-text text-darken-4">Stack du projet<i class="material-icons right">close</i></span>
                                {% for tech in project.techs %}
                                  <ul>
                                      <li>
                                          {{ tech.name }}
                                      </li>
                                  </ul>
                                {% endfor %}
                            </div>
                            <div class="card-action">
                                <span class="card-title activator grey-text text-darken-4">{{ project.name }}
                                    <i class="material-icons right line-height-0">more_vert</i>
                                </span>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="fixed-action-btn">
                <a href="{{ path('resumeDwld') }}" class="btn-floating btn-large teal-darken-1">
                    <i class="large material-icons">cloud_download</i>
                </a>
            </div>


            <div class="row" id="contact">
                <div class="col s12 m12">
                    {{ form_start(form, {'attr': {'id' : 'contact-form'}}) }}
                    <div>
                        {{ form_label(form.fullName) }}
                        {{ form_widget(form.fullName) }}
                    </div>
                    <div>
                        {{ form_label(form.email) }}
                        {{ form_widget(form.email) }}
                    </div>
                    <div>
                        {{ form_label(form.subject) }}
                        {{ form_widget(form.subject) }}
                    </div>
                    <div>
                        {{ form_label(form.message) }}
                        {{ form_widget(form.message) }}
                    </div>
                    <div>
                        <button class="btn waves-effect waves-light" type="submit"><i class="material-icons right">send
                            </i>Valider
                        </button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>

        </div>



    {% endblock %}
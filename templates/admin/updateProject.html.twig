{% extends 'base.html.twig' %}

 {% block body %}
     <div class="container form-container">
         <div class="col s12 m12">
             {{ form_start(form) }}
             <div>
                 {{ form_label(form.name) }}
                 {{ form_widget(form.name) }}
                 <input type="hidden" class="current-data" value="{{ project.name }}">
                 <span class="validation-feedback"><i class="material-icons" id="edit-project-name-feedback"></i></span>
                 <span class="error-msg" id="edit-project-name-error"></span>
             </div>
             <div>
                 {{ form_label(form.pictRef) }}
                 {{ form_widget(form.pictRef) }}
                 <input type="hidden" value="{{ project.pictRef}}">
                 <span class="validation-feedback"><i class="material-icons" id="edit-project-pictRef-feedback"></i></span>
                 <span class="error-msg" id="edit-project-pictRef-error"></span>
             </div>
             <div>
                 {{ form_label(form.description) }}
                 {{ form_widget(form.description) }}
                 <input type="hidden" class="current-data" value="{{ project.description}}">
                 <span class="validation-feedback"><i class="material-icons" id="edit-project-description-feedback"></i></span>
                 <span class="error-msg" id="edit-project-description-error"></span>
             </div>
             <div>
                 {{ form_label(form.link) }}
                 {{ form_widget(form.link) }}
                 <input type="hidden" class="current-data" value="{{ project.link}}">
             </div>
             <div>
                 {{ form_label(form.publish) }}
                 {{ form_widget(form.publish) }}
                 <input type="hidden" class="current-data" value={{ project.publish }}>
             </div>
             <div>
                 {{ form_label(form.techs) }}
                 {{ form_widget(form.techs) }}
                 {% for tech in project.techs %}
                     <input type="hidden" class="current-multi-check-data" value={{ tech.id }}>
                 {% endfor %}
             </div>
             <div>
                 <button class="btn waves-effect waves-light color-action-darken" type="submit"><i class="material-icons right">send
                     </i>Valider
                 </button>
             </div>
             {{ form_end(form) }}
         </div>
     </div>

 {% endblock %}

{% block javascripts %}
   {{ parent() }}
    <script type="text/javascript" src="{{ asset('build/validateUpdateProjectForm.js') }}"></script>
{% endblock %}
